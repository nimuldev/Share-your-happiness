<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:id="@+id/item"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:background="#ffffff"

        app:cardCornerRadius="10dp"
        app:cardElevation="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/foodIv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="@drawable/custom_input"
                android:scaleType="fitXY"
                android:src="@drawable/food" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2.8"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:weightSum="3">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/foodNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:text="Junk FOOD"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileIv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:src="@drawable/user"
                        app:civ_border_color="#000000"
                        app:civ_circle_background_color="#000000" />

                    <TextView
                        android:id="@+id/profileNameTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="2.3"
                        android:gravity="center_vertical"
                        android:text="Nahid"
                        android:textColor="#000"
                        android:textSize="15sp"

                        />

                    <TextView
      android:visibility="gone"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="Time :01.20. PM"
                        android:textColor="#000"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/updateTimeTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:text="Date:20/05/2020"
                        android:textColor="#000"
                        android:textSize="14dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/upazilaTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_weight="3 "
                        android:gravity="center_vertical"
                        android:paddingTop="2dp"
                        android:text="Upazila:asasddsdfddfsf"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                    android:id="@+id/dateTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:text="Date:20/05/2020"
                        android:textColor="#000"
                        android:textSize="12dp"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>