<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="50dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:gravity="center_horizontal"
                    android:paddingLeft="70dp"
                    android:paddingTop="11dp"
                    android:text="Choose Your Address"
                    android:textColor="#000"
                    android:textSize="17dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/custom_text"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Select Division"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/divisionSP"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".9"
                    android:background="@drawable/custom_text"
                    android:entries="@array/division_title"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/custom_text"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Select District"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/districtSP"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".9"
                    android:background="@drawable/custom_text"
                    android:entries="@array/district_title"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/custom_text"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Select Upazila"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/upazilaSP"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".9"
                    android:background="@drawable/custom_text"
                    android:entries="@array/upazila_title"
                    android:textSize="14dp" />

            </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2"
          android:gravity="end"
          android:orientation="horizontal"
          android:layout_marginRight="21dp"

          >
          <Button

              android:id="@+id/search_btn"
              android:layout_width="100dp"
              android:layout_height="40dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="12dp"
              android:background="@drawable/custom_text"
              android:text="Search"
              android:layout_marginRight="5dp"
              android:textAllCaps="false"

              android:textSize="15dp" />
          <Button
              android:id="@+id/close_btn"
              android:layout_width="100dp"
              android:layout_height="40dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="12dp"
              android:background="@drawable/close_btn"
              android:textColor="#fff"
              android:text="Cancel"
              android:textAllCaps="false"
              android:textSize="15dp" />
      </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>